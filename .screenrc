# termcapinfo
#termcapinfo xterm* G0:is=\E[?4l\E>:ti@:te@
#termcapinfo xterm* ti@:te@
#termcapinfo xterm ti@:te@
#termcapinfo linux me=\E[m:AX
#term xterm-256color
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'


# When Hang-up, ato detach
autodetach on

# Start Splash OFF
startup_message off

# ScrollBuffer Size
defscrollback 1000

# Statusbar
hardstatus on
hardstatus alwayslastline
hardstatus string "%{= gk}[%m/%d %02c] %{gW} %-w%{= wk}%n %t%{-}%+w %=%{gk}$USER@$HOSTNAME[$LANG] "
#hardstatus string "[%m/%d %02c] %`%-w%{=b bw}%n %t%{-}%+w %=%{ak}$USER@$HOSTNAME[$LANG] "

# terminal
#term xterm-256color
term xterm

# <C-k> kill window
bind k
bind ^k

# Error Bell
vbell off

# Message Wait
msgminwait 0

# Encoding
defutf8 on
defkanji utf-7
encoding utf-8 utf-8
defencoding utf-8

# title(need .bashrc setting)
# bashrc => PS1='\033k\033\\\[\033[36m\][\u@\h \W]$\[\033[0m\] '
shelltitle "$ |bash"

# deletes by a present background color
defbce on

# output color
sorendition "+rb .G"

# logfile
logfile $HOME/.screen/screenlog.%n-%H-%y%m%d-%c:%s-%t
log on
deflog on

